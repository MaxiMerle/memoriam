{% extends 'base.html.twig' %}
{% block seoTitle %}
    {% spaceless %}
        Votre Projet
    {% endspaceless %}
{% endblock %}

{% block body %}


    <section class="title">
        <h1>Votre Projet</h1>
        <hr>
        <h2>Votre hommage video commence ici ...</h2>
{#        <a href="#collapseOne" role="button" aria-expanded="true" aria-controls="collapseOne">INFORMATIONS</a>#}
{#        <a href="#collapseTwo" role="button" aria-expanded="false" aria-controls="collapseTwo">INFORMATIONS DEFUNT</a>#}
{#        <a href="#collapseThree" role="button" aria-expanded="true" aria-controls="collapseThree">FICHIERS PHOTOS</a>#}
